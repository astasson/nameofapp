<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group mx-sm-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mx-sm-3" %>
  </div>

  <div class="form-group mx-sm-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control mx-sm-3" %>
  </div>

  <div class="form-group mx-sm-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mx-sm-3" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "form-label btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
