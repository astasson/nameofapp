
<div class="row">
  <% @orders.each do |order| %>
  <div class="col-sm">
    <%= image_tag(order.product.image_url, class: "img-fluid") %>
    <h1>Order # <%= order.id %>:
      <%= link_to order.product.name, order %>
    </h1>
    <p><%= order.product.description %></p>
    <strong>$ <%= '%.2f' % (order.product.prices/100) %></strong>
  </div><!-- /col -->
  <% end %>
</div>
