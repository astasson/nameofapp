    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, class: "form-control" %>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <%= form.label :colour %>
    <%= form.text_field :colour, class: "form-control" %>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <%= form.label :prices %>
    <%= form.text_field :prices, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary my-2 my-sm-0" %>
  </div>
