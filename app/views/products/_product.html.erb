<div class="col-sm card" style="width: 18rem;">
  <%= image_tag(product.image_url, class: "img-fluid card-img-top") %>
  <div class="card-body">
    <% cache product do %>
    <a href="#"><h1 class="card-title"><%= link_to "#{product.name}", product_path(product.id) %></h1></a>
    <p class="card-text"><%= product.description %></p>
    <strong class="card-text">$<%= '%.2f' % (product.prices/100) %></strong>
    <% end %>
  </div>
  <% if current_user && current_user.admin? %>
    <%= link_to "Edit", edit_product_path(product.id) %>
  <% end %>
</div>
