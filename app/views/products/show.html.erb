<p id="notice"><%= notice %></p>

<% cache @product do %>
<div data-product-id="<%= @product.id %>">
  <%= image_tag(@product.image_url, width: "800", class: "img-fluid img-zoom", data_image_zoom: "../../assets/images/pizza_big.jpeg",
    zoomType: "window", zoomWindowWidth: "100", zoomWindowHeight: "100") %>
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Colour:</strong>
    <%= @product.colour %>
  </p>

  <p>
    <strong>Price: </strong>$
    <%= '%.2f' % (@product.prices/100) %>
  </p>
</div>
<%= form_with(url: '/payments/create') do |form| %>
  <%= render partial: "shared/stripe_checkout_button" %>
  <%= hidden_field_tag(:product_id, @product.id) %>
<% end %>

<p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div></p>
<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
<%= render 'new_comment' %>

<%= render 'comments' %>

<div>
  <div>
    <%= page_entries_info @comments %>
  </div>
  <%= will_paginate @comments, :container => false %>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<% end %>
